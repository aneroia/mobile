<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccd5ae"
    tools:context=".SecondActivity">

    <View
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="194dp"
        android:layout_marginTop="4dp"
        android:background="#fefae0"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="-4dp" />

    <View
        android:id="@+id/shareview1"
        android:layout_width="420dp"
        android:layout_height="114dp"
        android:layout_marginTop="208dp"
        android:background="#fefae0"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="-5dp" />


    <View
        android:id="@+id/shareview2"
        android:layout_width="420dp"
        android:layout_height="114dp"
        android:layout_marginTop="332dp"
        android:background="#fefae0"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:focusable="auto"
        android:fontFamily="@font/shrikhand"
        android:text="InvestMe"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#c7734c"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="96dp"
        android:focusable="auto"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#5E3724"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userDataTextView"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:focusable="auto"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#5E3724"
        app:layout_constraintBottom_toTopOf="@+id/balanceTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#e3d7af"
        android:text="ДОБАВИТЬ АКЦИЮ"
        android:textColor="#c7734c"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="252dp" />

    <LinearLayout
        android:id="@+id/layoutStocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:background="#e2e5c3"
        android:ems="10"
        android:inputType="text"
        android:hint="Акция"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="227dp" />

    <EditText
        android:id="@+id/share1summ"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="#e2e5c3"
        android:paddingStart="10dp"
        android:hint="Баланс"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="279dp" />


</androidx.constraintlayout.widget.ConstraintLayout>