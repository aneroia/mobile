<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccd5ae"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="420dp"
        android:layout_height="366dp"
        android:layout_marginTop="4dp"
        android:background="#fefae0"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="267dp"
        android:layout_height="69dp"
        android:layout_marginTop="180dp"
        android:focusable="auto"
        android:text="Представьтесь и придумайте пароль"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#5E3724"
        app:layout_constraintBottom_toTopOf="@+id/usernameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="69dp"
        android:layout_marginTop="92dp"
        android:focusable="auto"
        android:fontFamily="@font/shrikhand"
        android:text="InvestMe"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#c7734c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="#e2e5c3"
        android:ems="10"
        android:hint="Имя"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintWidth_percent="0.75" />

    <EditText
        android:id="@+id/balanceEditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#e2e5c3"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="numberPassword"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText"
        app:layout_constraintWidth_percent="0.75" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#e3d7af"
        android:text="СОЗДАТЬ ПОРТФЕЛЬ"
        android:textColor="#c7734c"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceEditText"
        app:layout_constraintWidth_percent="0.5" />



</androidx.constraintlayout.widget.ConstraintLayout>